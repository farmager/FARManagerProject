<% provide(:title, 'Equipment Details') %>
<div id="wrapper">

  <%=render "shared/sidebar"%>

  <!-- Page content -->
  <div id="page-content-wrapper">
    <div class="content-header">
      <a id="menu-toggle" href="#" class="btn btn-default"><i class="icon-reorder"></i></a>
      <h3><%=@storage.name%></h3>



    </div>
    <hr/>
    <div class="page-content inset">
      <div class="row">

        <!-- <div class="col-md-12"> -->

        <div class="col-md-1">
        </div>

        <div class="col-md-8">
          <p class="well">

            <b><u><%=@storage.name%> Details</u></b>
            <br/>
            <br/>
            <b>Group: </b> <%= @storage.group%>
            <br/>
            <br/>


            <b>Capacity: </b> <%= @storage.capacity %>
            <br/>

            <br/>
            <b>Status: </b> <%= @storage.rent_or_own %>
            <br/>

            <br/>
            <b>Notes: </b> <%= @storage.notes%>
            <br/>



          </p>
        </div>






      </div>
      <hr/>
      <div class="row">
        <div class="col-md-1">
        </div>

        <div class="col-md-8">

          <h3>Inventory Listing</h3>
          <table class="table table-striped table-bordered table-condensed table-hover">
            <thead>
            <tr>

              <th>Name</th>
              <th>Commodity</th>
              <th>Commodity Variety</th>
              <th>Field</th>

              <th>Moisture Content</th>
              <th>Crop Year</th>
              <th>Bin</th>
              <th>Quantity</th>
              <th>Status</th>
              <th>Price</th>

              <th>Action</th>

            </tr>

            </thead>
            <tbody>
            <% @inventories.each do |inventories| %>
                <%if inventories.bin==@storage.name%>
                <tr>

                  <td><%= inventories.name %></td>
                  <td><%= inventories.commodity %></td>
                  <td><%= inventories.commodity_variety %></td>
                  <td><%= inventories.harvested_field %></td>

                  <td><%= inventories.moisture_content %></td>
                  <td><%= inventories.cropyear %></td>
                  <td><%= inventories.bin %></td>
                  <td><%= inventories.capacity %></td>
                  <td><%= inventories.status %></td>
                  <td><%= inventories.price %></td>


                  <td>
                    <div class="btn-group">
                      <a class="btn dropdown-toggle btn-primary action-btn" href="#" data-toggle="dropdown"> <%= t('Action   ') %><b class="caret"></b> </a>
                      <ul class="dropdown-menu">

                        <li>
                          <%= link_to t('Edit'), edit_inventory_path(inventories) %>
                        </li>
                        <li>
                          <%= link_to t('Delete'),inventories, method: :delete, data: { confirm: 'Are you sure?' } %>
                        </li>
                      </ul>
                    </div><!-- button group --></td>
                </tr>
            <% end %>
                <%end%>
            </tbody>
          </table>



        </div>

      </div>

      <!-- </div> -->
    </div>
  </div>
</div>








