<% provide(:title, 'Weather') %>
<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="http://code.highcharts.com/modules/exporting.js"></script>
<div id="wrapper">

<%=render "shared/sidebar"%>


	<div id="page-content-wrapper">
		<div class="content-header">
			<a id="menu-toggle" href="#" class="btn btn-default"><i class="icon-reorder"></i></a>
			<h3>Weather</h3>

		</div>

	
		<div class="page-content inset">
			<div class="row">

				<div class="col-md-12">
	
			<!-- this value will change on production to eug's id there -->
				<% if current_user.id==12 %>
				
					<div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
					<div id="2013" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
					<% else %>
					Not Eugene
					<%end%>
					
					<!-- <%=render "shared/weather"%> -->
				</div>

			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
	$(document).ready(function(){
    $('#container').highcharts({
        title: {
            text: 'Precipitation Yearly Amounts',
            x: -20 //center
        },
         subtitle: {
                text: 'Cymric Area: April 1-November 1',
                x: -20
            },
             credits: {
            enabled: false
        },
        

        xAxis: {
                        title: {
                text: 'Years'
            },
            categories: ['2001', '2002', '2003', '2004', '2005', '2006',
                '2007', '2008', '2009', '2010', '2011', '2012', '2013']
        },
        yAxis: {
            title: {
                text: 'Precipitation Totals (mm)'
            },
            plotLines: [{
                value: 0,
                width: 1,
                color: '#808080'
            }]
        },
        tooltip: {
            valueSuffix: 'mm'
        },
        legend: {
            layout: 'vertical',
            align: 'right',
            verticalAlign: 'middle',
            borderWidth: 0
        },
        series: [{
            name: 'Precipitation',
            data: [239.2, 539.7, 253.3, 266.3, 431.7, 340.2, 196.1, 389.7, 426.6, 652.5, 231.4, 234.6, 272]

        }]
    });
});
   
    </script>
    
