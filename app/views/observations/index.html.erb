<% provide(:title, 'Observations') %>

<div id="wrapper">

  <%=render "shared/sidebar"%>

            <!-- Page content -->
        <div id="page-content-wrapper">
            <div class="content-header">
               <a id="menu-toggle" href="#" class="btn btn-default"><i class="icon-reorder"></i></a>
                  <h3>Add a Field Observation</h3>
           </div>
           
            <div class="page-content inset">
                <div class="row">
                    
                    <div class="col-md-12">
                    	
                    		         	<div class="alert alert-info" align="center">
    <p>Don't forget to file your crop insurance claim if you are eligible!</p>
</div>
                        <a class="btn btn-default btn-primary pull-right" href="/observations/new" role="button">Add Observations</a>
		
		<%= search_form_for @search,:html => {:class => "form-inline"} do |f| %>
  <%= f.condition_fields do |c| %>
  <div class="input-medium search-field">
    <%= c.attribute_fields do |a| %>
      <%= a.attribute_select %>
    <% end %>
    <%= c.predicate_select %>
    <%= c.value_fields do |v| %>
      <%= v.text_field :value %>
    <% end %>
    </div>
  <% end %>
  <div class="actions"><%= f.submit "Search" %></div>
  
<% end %>
		
		
		<div class="spacer"></div>
		
	
       
		
		<table class="table table-striped table-bordered table-condensed table-hover">
			<thead>
				<tr>
			
					<th>Observation Type</th>
					<th>Observed Date</th>
					<th>Identification</th>
					<th>Land Parcel</th>
					<th>Crop Observed</th>
					<th>Severity</th>
					<th>Growth Stage</th>
					<th>Notes</th>
					<th>Action</th>

				</tr>
				
			</thead>
			<tbody>
				<% @observations.each do |observation| %>
				<tr>
	

					<td><%= observation.observation_type %></td>
					
					<td><%=observation.date_observed %></td>
					<td><%=observation.observation_specific%></td>
					<td><%= observation.landparcel %></td>
					<td><%= observation.cropobserved %></td>
					<td><%= observation.severity %></td>
					<td><%= observation.growthstage %></td>
					<td><%= observation.notes %></td>
				
		<td>
<div class="btn-group"><a class="btn dropdown-toggle btn-primary action-btn" href="#" data-toggle="dropdown">
 <%= t('Action  ') %> <b class="caret"></b>
 
 </a>
<ul class="dropdown-menu">
    <li><%= link_to t('Show'), observation %></li>
    <li><%= link_to t('Edit'), edit_observation_path(observation) %></li>
    <li><%= link_to t('Delete'), observation, method: :delete, data: { confirm: 'Are you sure?' } %></li>
</ul>
</div>
<!-- button group --></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		
	
                    </div>
                
                </div>
            </div>
        </div>
    </div>
















