<% provide(:title, 'Fields') %>
<div id="wrapper">

	<%= render "shared/sidebar"%>
	<!-- Page content -->
	<div id="page-content-wrapper">
		<div class="content-header">
			<a id="menu-toggle" href="#" class="btn btn-default"><i class="icon-reorder"></i></a>
			<h3>Fields</h3>

		</div>

		<div class="page-content inset">
			<div class="row">

				<div class="col-md-12">
					<div class="btn-toolbar pull-right">
					<a class="btn btn-default btn-primary" href="/fields/new" role="button">Add Fields</a>
					<a class="btn btn-default btn-info" href="/graphs" role="button">Statistics</a>
					<%= link_to "Download as Excel", fields_path(format: "xls"), class:"btn btn-default btn-warning" %>
					</div>
					<%= search_form_for @search,:html => {:class => "form-inline"} do |f| %>
					<%= f.condition_fields do |c| %>
					<div class="input-medium search-field">
						<%= c.attribute_fields do |a| %>
						<%= a.attribute_select %>
						<% end %>
						<%= c.predicate_select %>
						<%= c.value_fields do |v| %>
						<%= v.text_field :value %>
						<% end %>
					</div>
					<% end %>
					<div class="actions">
						<%= f.submit "Search" %>
					</div>

					<% end %>
					<div class="spacer"></div>

					<table class="table table-striped table-bordered table-condensed table-hover">
						<thead>
							<tr>

								<th>Land Location</th>
								<!-- <th>Land Name</th> -->
								<th>Grain</th>
								<th><%= sort_link(@search, :year, "Crop Year")%></th>
								<th>Variety</th>
								<th><%= sort_link(@search, :seeding_date, "Seeding Date")%></th>
								<th>Seeding Acres</th>
								<th>Herbicide</th>
								<!-- <th>Fungicide</th> -->
								<th>Fertilizer- Nitrogen</th>
								<th>Fertilizer- Phosphorous</th>
								<!-- <th>Fertilizer- Potassium</th> -->
								<th>Fertilizer- Sulphur</th>
								<th>Net Yield</th>
								<th>Grade</th>
								<th>Production Amount</th>
								<th>Action</th>

							</tr>

						</thead>
						<tbody>
							<% @fields.each do |field| %>
							<tr>

								<td><%= field.land_location %></td>
								<!-- <td><%= field.land_name %></td> -->
								<td><%= field.crop_type %></td>
								<td><%= field.year %></td>
								<td><%= field.variety %></td>
								<td><%= field.seeding_date.strftime("%B %d, %Y") %></td>
								<td><%= field.seeded_acres %></td>
								<td><%= field.herbicides %></td>
								<!-- <td><%= field.fungicides%></td> -->
								<td><%= field.f_nitrogen %></td>
								<td><%= field.f_phosphorous %></td>
								<!-- <td><%= field.f_potassium %></td> -->
								<td><%= field.f_sulphur %></td>
								<td><%= field.netyield %></td>
								<td><%= field.grade %></td>
								<td><%= field.production %></td>
								<td>
								<div class="btn-group">
									<a class="btn dropdown-toggle btn-primary action-btn" href="#" data-toggle="dropdown"> <%= t('Action  ') %> <b class="caret"></b> </a>
									<ul class="dropdown-menu">
										<li>
											<%= link_to t('Show'), field %>
										</li>
										<li>
											<%= link_to t('Edit'), edit_field_path(field) %>
										</li>
										<li>
											<%= link_to t('Delete'), field, method: :delete, data: { confirm: 'Are you sure?' } %>
										</li>
									</ul>
								</div><!-- button group --></td>
							</tr>
							<% end %>
						</tbody>
					</table>

				</div>

			</div>
		</div>
	</div>
</div>

