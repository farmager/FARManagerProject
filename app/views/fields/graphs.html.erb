<% provide(:title, 'Field Graphs') %>
<div id="wrapper">

	<%= render "shared/sidebar"%>
	<!-- Page content -->
	<div id="page-content-wrapper">
		<div class="content-header">
			<a id="menu-toggle" href="#" class="btn btn-default"><i class="icon-reorder"></i></a>
			<h3>Field Graphs</h3>

		</div>

		<div class="page-content inset">
			<div class="row">

				<div class="col-md-12">

					<p align="center">
						Pie Chart by Grain Type
					</p>

					<%= pie_chart current_user.fields.group("crop_type").count %>
				</div>
				</div>
				
				
				

				<div class="row">

					<div class="col-md-12">

						<p align="center">
							Seeded Acres by Field
						</p>

						<%= column_chart current_user.fields.group("land_location").sum(:seeded_acres) %>
					</div>
					</div>
					
					
					
				

					

					

				
			</div>
		</div>
	</div>
