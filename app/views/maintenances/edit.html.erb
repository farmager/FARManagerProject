<% provide(:title, 'Edit Maintenance Record') %>
<div id="wrapper">

	<%= render "shared/sidebar"%>

	<!-- Page content -->
	<div id="page-content-wrapper">
		<div class="content-header">
			<a id="menu-toggle" href="#" class="btn btn-default"><i class="icon-reorder"></i></a>
			<h3>Edit Maintenance Record:</h3>

		</div>

		<div class="page-content inset">
			<div class="row">

				<div class="col-md-12">

					<%= bootstrap_form_for(@maintenance, style: :horizontal, left: "col-sm-4", right: "col-sm-4",  :html => { :multipart => true }) do |f| %>


<%= f.collection_select :equipment_maintained,current_user.equipment.select(:name), :name, :name,{:include_blank => "Please select equipment that was serviced."}%>


					<%= f.date_select :maintenance_date, start_year: 2007, end_year: 2014,label: "Date Maintenance Was Performed" %>

					<%= f.date_select :next_maintenance_date, start_year: 2014, end_year: 2020, label: "Future Maintenance Date" %>

					<%= f.text_area :maintenance_notes, placeholder: "Enter details about maintenance that was performed...", label: "Maintenance Notes"%>

					<%= f.text_field :mainteance_data, placeholder: "Enter the engine hours or mileage...", label: "Engine Hours or Mileage" %>

					<%=f.text_field :maintenance_cost, placeholder: "Enter the maintenance or repair cost...", label: "Cost of Maintenance"%>
					<%= f.form_group do %>
					<%= f.submit "Edit Maintenance Record",class: "btn btn-primary"%>
					<% end %>

					<% end %>
				</div>

			</div>
		</div>
	</div>
</div>

