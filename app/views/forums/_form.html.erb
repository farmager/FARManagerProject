<div id="forumwrapper">

	<!-- Page content -->
	<div id="page-content-wrapper">

		<div class="page-content inset">
			<div class="row">

				<div class="col-md-12">

					<div class="bigger_spacer"></div>

					<div class="module">
						<div class="module_header">
							<%= action_name.humanize %> Forum
						</div>
						<div class="module_subheader smaller">
							<em>To create a new forum, select the applicable category field.</em>
						</div>
						<div class="module_body">
							<%= bootstrap_form_for(@forum, style: :horizontal) do |f| %>

							<% if @forum.errors.any? %>
							<% flash[:warning] = @forum.errors.full_messages.join(', and ') %>
							<% end %>
							<div class="fieldset">

								<%= f.collection_select :category_id, Category.all, :id, :title %>

								<div class="clear"></div>
							</div>
							<div class="fieldset">

								<%= f.text_field :title %>
								<div class="clear"></div>
							</div>
							<div class="fieldset">

								<%= f.text_area :description %>
								<div class="clear"></div>
							</div>

						</div>
						<div class="module_footer">
							<div class="fieldset">
								<%= f.submit "Submit Forum" %>

							</div>
						</div>
						<% end %>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>

