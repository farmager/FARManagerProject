<% provide(:title, 'Inventory') %>

<div id="wrapper">

<%=render "shared/sidebar"%>

	<!-- Page content -->
	<div id="page-content-wrapper">
		<div class="content-header">
			<a id="menu-toggle" href="#" class="btn btn-default"><i class="icon-reorder"></i></a>
			<h3>Inventory</h3>

		</div>

		<div class="page-content inset">
			<div class="row">

				<div class="col-md-12">
					
					<a class="btn btn-default btn-primary" href="/storages/new" role="button">Add Storage</a>
					
					<a class="btn btn-default btn-primary" href="/inventories/new" role="button">Add Inventory</a>

                  <div class="spacer"></div>


                  <%@storages.each do |s|%>


                      <h4><b>Storage Name:</b> <%= link_to s.name, s %> </h4>
                      <p><b>Capacity</b> <%=(s.capacity) %> bushels</p>

                      <%= link_to "Edit", edit_storage_path(s), class:"btn btn-sm btn-default" %>
                      <%= link_to "Delete", s, method: :delete, class:"btn btn-sm btn-default",data: { confirm: "Are you sure you want to delete this?" } %>


                      <br/>
                  <%end%>


                  <hr/>


                  <h4><u>Inventory Listing</u></h4> <br/>

<table class="table table-striped table-bordered table-condensed table-hover">
	<thead>
		<tr>

			<th>Name</th>
			<th>Commodity</th>
			<th>Commodity Variety</th>
			<th>Field</th>
			<th>Ticket Number</th>
			<th>Moisture Content</th>
			<th>Crop Year</th>
			<th>Bin</th>
			<th>Quantity</th>
			<th>Status</th>
			<th>Price</th>
			<th>Notes</th>		  
			<th>Action</th>

		</tr>

	</thead>
	<tbody>
		<% @inventories.each do |inventories| %>
		<tr>

			<td><%= inventories.name %></td>
			<td><%= inventories.commodity %></td>
			<td><%= inventories.commodity_variety %></td>
			<td><%= inventories.harvested_field %></td>
			<td><%= inventories.ticket_no %></td>
			<td><%= inventories.moisture_content %></td>
			<td><%= inventories.cropyear %></td>
			<td><%= inventories.bin %></td>
			<td><%= inventories.capacity %></td>
			<td><%= inventories.status %></td>
			<td><%= inventories.price %></td>
			<td><%= inventories.notes %></td>

			<td>
			<div class="btn-group">
				<a class="btn dropdown-toggle btn-primary action-btn" href="#" data-toggle="dropdown"> <%= t('Action   ') %><b class="caret"></b> </a>
				<ul class="dropdown-menu">
					<li>
						<%= link_to t('Show'), inventories %>
					</li>
					<li>
						<%= link_to t('Edit'), edit_inventory_path(inventories) %>
					</li>
					<li>
						<%= link_to t('Delete'),inventories, method: :delete, data: { confirm: 'Are you sure?' } %>
					</li>
				</ul>
			</div><!-- button group --></td>
		</tr>
		<% end %>
	</tbody>
</table>

					
				</div>

			</div>
		</div>
	</div>
</div>









