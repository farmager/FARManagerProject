 <% provide(:title, 'Equipment Details') %>
 <div id="wrapper">

  <%=render "shared/sidebar"%>

            <!-- Page content -->
        <div id="page-content-wrapper">
            <div class="content-header">
               <a id="menu-toggle" href="#" class="btn btn-default"><i class="icon-reorder"></i></a>
                  <h3><%=@equipment.name%></h3>
                  
                 
                
            </div>
           <hr/>
            <div class="page-content inset">
                <div class="row">
                    
                    <!-- <div class="col-md-12"> -->
                    	    
                    <div class="col-md-1">
                    	</div>
                    	    
            	<div class="col-md-8">
                        <p class="well">
                        	
                        	<b><u><%=@equipment.name%> Details</u></b>
                        	<br/>
                   <br/>
			<b>Category: </b> <%= @equipment.category%>
			<br/>
			<br/>     	 
		
	
			<b>Make: </b> <%= @equipment.make %>
			<br/>

			<br/>
			<b>Model: </b> <%= @equipment.model %>
			<br/>

			<br/>
			<b>Year: </b> <%= @equipment.year %>
			<br/>

			<br/>
			<b>Value: </b> <%= @equipment.value%>
			<br/>

			
			<br/>
			<b>Mileage or Engine Hours: </b> <%= @equipment.mileage_or_engine_hours%>
			<br/>


			<br/>
			<b>Notes: </b> <%= @equipment.notes%>
			<br/>

			<!-- <br/>
			<b>Image:</b><%= image_tag @equipment.image.url %>
			<br/> -->

			<br/>
			<b>Last Update: </b> <%= time_ago_in_words(@equipment.updated_at)%>
			<br/>
			
                        </p>
                    </div>
                   
                   	  
            	
          
          

                    </div>
                    	   <hr/>
                    <div class="row">
                    	<div class="col-md-1">
                    		</div>
                    	
                    	   <div class="col-md-3">
                   	   
                   	     	<h3>Maintenance Records</h3>
                   	     		
                   	     				<table class="table table-striped table-bordered table-condensed table-hover">
						<thead>
							<tr>

								<th><b>Equipment</b></th>
								<th><b>Details</b></th>
								<th><b>Service Date Performed</b></th>
								<th><b>Next Service Date</b></th>
								<th><b>Enginer Hours/Mileage</b></th>
								<th><b>Cost</b></th>
								<th><b>Action</b></th>

							</tr>

						</thead>
						<tbody>
							
							<% current_user.maintenance.each do |m| %>
							<%if m.equipment_maintained==@equipment.name%>
							<tr>
								
								

								<td><b><%= m.equipment_maintained %></b></td>
								<td><%= m.maintenance_notes%></td>
								<td><%= m.maintenance_date.strftime("%B %d, %Y")%></td>
								<td><%= m.next_maintenance_date.strftime("%B %d, %Y")%></td>
								<td><%= m.mainteance_data%></td>
								<td><%= number_to_currency(m.maintenance_cost)%></td>

				<td>
					<div class="btn-group">
									<a class="btn dropdown-toggle btn-primary action-btn" href="#" data-toggle="dropdown"> <%= t('Action  ') %> <b class="caret"></b> </a>
									<ul class="dropdown-menu">
										<!-- <li>
											<%= link_to t('Show'), m %>
										</li> -->
										<li>
											<%= link_to t('Edit'), edit_maintenance_path(m) %>
										</li>
										<li>
											<%= link_to t('Delete'), m, method: :delete, data: { confirm: 'Are you sure?' } %>
										</li>
									</ul>
								</div>
					
					
					
					
					
				</td>
							</tr>
							<%end%>
							<% end %>
						</tbody>
					</table>
                   	     		
                   	     	
                        
                    </div>
                    	
                    	</div>
              
                <!-- </div> -->
            </div>
        </div>
    </div>








