<% provide(:title, 'Equipment') %>
<div id="wrapper">
	
	<!-- add in equipment maintenance activity field -> oil change repair etc -->

	<%= render "shared/sidebar"%>

	<!-- Page content -->
	<div id="page-content-wrapper">
		<div class="content-header">
			<a id="menu-toggle" href="#" class="btn btn-default"><i class="icon-reorder"></i></a>
			<h3>Equipment</h3>

		</div>

		<div class="page-content inset">
			<div class="row">

				<div class="col-md-12">
					<div class="btn-toolbar">
					<a class="btn btn-default btn-primary" href="/equipment/new" role="button">Add Equipment</a>
					<a class="btn btn-default btn-info" href="/maintenances/new" role="button">Add Maintenance Record</a>
					</div>
					<div class="spacer"></div>
					<h3>Equipment your farm operations has listed:</h3>
					<%= render @equipment %>
					<hr>
					<h3>Maintenance Records that exist for your equipment:</h3>
					<% @maintenances.each do |m| %>
					<b>Maintenance Performed on:</b>                 <%=m.equipment_maintained%><br/>
					<b>Maintenance Details:</b>                 <%=m.maintenance_notes%><br/>
					<b>Maintenance Date Performed:</b><%=m.maintenance_date.strftime("%B %d, %Y")%><br/>
					<b>Next Maintenance Service Date</b>
					<%=m.next_maintenance_date.strftime("%B %d, %Y")%>
					<br/>
					<br/>
					<%end%>

				</div>

			</div>
		</div>
	</div>
</div>

