<% provide(:title, 'Equipment') %>
<div id="wrapper">

	<!-- add in equipment maintenance activity field -> oil change repair etc -->

	<%= render "shared/sidebar"%>

	<!-- Page content -->
	<div id="page-content-wrapper">
		<div class="content-header">
			<a id="menu-toggle" href="#" class="btn btn-default"><i class="icon-reorder"></i></a>
			<h3>Equipment</h3>

		</div>

		<div class="page-content inset">
			<div class="row">

				<div class="col-md-12">
					<div class="btn-toolbar">
						<a class="btn btn-default btn-primary" href="/equipment/new" role="button">Add Equipment</a>
						<a class="btn btn-default btn-info" href="/maintenances/new" role="button">Add Maintenance Record</a>

					</div>
					<div class="spacer"></div>
					
					
					<%= render @equipment %>
					
					<br/>
				
					
					<h4><u>Maintenance Records</u></h4>
					<table class="table table-striped table-bordered table-condensed table-hover">
						<thead>
							<tr>

								<th><b>Equipment</b></th>
								<th><b>Details</b></th>
								<th><b>Service Date Performed</b></th>
								<th><b>Next Service Date</b></th>
								<th><b>Enginer Hours/Mileage</b></th>
								<th><b>Cost</b></th>
								<th><b>Action</b></th>

							</tr>

						</thead>
						<tbody>
							<% @maintenances.each do |m| %>
							<tr>

								<td><b><%= m.equipment_maintained %></b></td>
								<td><%= m.maintenance_notes%></td>
								<td><%= m.maintenance_date.strftime("%B %d, %Y")%></td>
								<td><%= m.next_maintenance_date.strftime("%B %d, %Y")%></td>
								<td><%= m.mainteance_data%></td>
								<td><%= number_to_currency(m.maintenance_cost)%></td>

				<td>
					<div class="btn-group">
									<a class="btn dropdown-toggle btn-primary action-btn" href="#" data-toggle="dropdown"> <%= t('Action  ') %> <b class="caret"></b> </a>
									<ul class="dropdown-menu">
										<!-- <li>
											<%= link_to t('Show'), m %>
										</li> -->
										<li>
											<%= link_to t('Edit'), edit_maintenance_path(m) %>
										</li>
										<li>
											<%= link_to t('Delete'), m, method: :delete, data: { confirm: 'Are you sure?' } %>
										</li>
									</ul>
								</div>
					
					
					
					
					
				</td>
							</tr>
							<% end %>
						</tbody>
					</table>

				</div>

			</div>
		</div>
	</div>
</div>

